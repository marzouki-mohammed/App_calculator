<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".signUp">
    <TextView
        android:id="@+id/signUptext"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="@string/SignUp"
        android:textColor="#5a189a"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/usernameSignUp"
        android:layout_width="392dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/signUptext"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="-148dp"
        android:background="@drawable/transparent_border"
        android:drawableLeft="@drawable/ic_person"
        android:hint="Username"
        android:drawablePadding="20sp"
        android:padding="10dp"
        android:textColorHint="@color/black"
        android:textSize="23dp"/>
    <EditText
        android:id="@+id/EmailSignUp"
        android:layout_width="392dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/signUptext"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="-230dp"
        android:background="@drawable/transparent_border"
        android:drawableLeft="@drawable/baseline_mark_email_read"
        android:hint="Email"
        android:drawablePadding="20sp"
        android:padding="10dp"
        android:textColorHint="@color/black"
        android:textSize="23dp"/>

    <EditText
        android:id="@+id/passwordSignUp"
        android:layout_width="392dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/signUptext"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="-317dp"
        android:background="@drawable/transparent_border"
        android:drawableLeft="@drawable/baseline_info"
        android:drawablePadding="20sp"
        android:inputType="textPassword"
        android:hint="@string/Password_name"
        android:padding="10dp"
        android:textColorHint="@color/black"
        android:textSize="23dp" />

    <EditText
        android:id="@+id/phoneSignUp"
        android:layout_width="392dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/signUptext"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="-404dp"
        android:background="@drawable/transparent_border"
        android:drawableLeft="@drawable/baseline_local_phone"
        android:drawablePadding="20sp"
        android:hint="@string/Password_name"
        android:padding="10dp"
        android:textColorHint="@color/black"
        android:textSize="23dp" />

    <EditText
        android:id="@+id/adressSignUp"
        android:layout_width="392dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/signUptext"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="-489dp"
        android:background="@drawable/transparent_border"
        android:drawableLeft="@drawable/baseline_add_location"
        android:drawablePadding="20sp"
        android:hint="Address"
        android:padding="10dp"
        android:textColorHint="@color/black"
        android:textSize="23dp" />

    <Button
        android:id="@+id/registerbutton"
        android:layout_width="386dp"
        android:layout_height="58dp"
        android:layout_alignBottom="@+id/signUptext"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-598dp"
        android:backgroundTint="@color/purple"
        android:text="@string/SignUp"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        android:layout_marginLeft="12dp"/>

</RelativeLayout>